  <body class="bg-light">
    <nav class="navbar sticky-top navbar-expand-lg font">
      <div class="container-fluid">
        <a class="navbar-brand text-white" href="#">Yelp camp </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a
                class="nav-link text-white active"
                aria-current="page"
                href="/home"
                >Home</a
              >
            </li>
            <li class="nav-item">
              <a
                class="nav-link text-white active"
                aria-current="page"
                href="/campground"
                >Campgrounds</a
              >
            </li>
            <li class="nav-item active">
              <a
                class="nav-link text-white active"
                aria-current="page"
                href="/campground/new"
                >New campground</a
              >
            </li>
            <li class="nav-item active">
              <a
                class="nav-link text-white active"
                aria-current="page"
                href="/register"
                >Register</a
              >
            </li>
            <li class="nav-item active">
              <a
                class="nav-link text-white active"
                aria-current="page"
                href="/login"
                >Login</a
              >
            </li>
            <li>
              <a
                class="nav-link text-white active"
                aria-current="page"
                href="/logout"
                >logout</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div id="map" style="width: 100%; height: 700px"></div>

    <div class="container mt-5">
      <h1 class="mt-3">All campgrounds</h1>

     <div class="container">
  <div class="row g-3">
    <% for (let campground of campgrounds) { %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= campground.city %></h5>
            <p><%= campground.place %></p>
            <a
              href="/campground/<%= campground._id %>"
              class="btn btn-outline-success"
            >
              View Campground
            </a>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>

  </body>

  <script>
    const mapToken =  '<%- process.env.MAPBOX_TOKEN %>';
    const campgrounds = {features: <%- JSON.stringify(campgrounds) %>}
  </script>
  <script src="/javascript/clusterMap.js"></script>
  <script
    src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
